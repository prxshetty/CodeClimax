{
  "manifest_version": 3,
  "name": "CodeClimax",
  "version": "1.0.0",
  "description": "Enhanced celebration media for LeetCode problem submissions",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.youtube.com/*",
    "https://tenor.com/*",
    "https://media.tenor.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay/*",
        "assets/*",
        "utils/*"
      ],
      "matches": ["https://leetcode.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "CodeClimax Settings",
    "default_icon": {
      "16": "assets/icon-16.svg",
      "32": "assets/icon-32.svg",
      "48": "assets/icon-48.svg",
      "128": "assets/icon-128.svg"
    }
  },
  "icons": {
    "16": "assets/icon-16.svg",
    "32": "assets/icon-32.svg",
    "48": "assets/icon-48.svg",
    "128": "assets/icon-128.svg"
  }
}